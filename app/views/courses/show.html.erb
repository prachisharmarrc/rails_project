<h1><%= @course.title %></h1>
<p><%= @course.description %></p>
<p>Price: <%= number_to_currency(@course.price) %></p>
<p><%= link_to 'Edit', edit_course_path(@course) %> | <%= link_to 'Back', courses_path %></p>
<h2>Lessons</h2>
<% @lessons.each do |lesson| %>
  <div>
    <h3><%= link_to lesson.title, lesson_path(lesson) %></h3>
    <p><%= lesson.content.truncate(100) %></p>
  </div>
<% end %>
<%= link_to 'Add Lesson', new_course_lesson_path(@course) %>
