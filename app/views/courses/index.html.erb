<h1>Courses</h1>

<%= form_with url: courses_path, method: :get, local: true do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'Search' %>
<% end %>

<%= link_to 'New Course', new_course_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.title, course_path(course) %></td>
        <td><%= truncate(course.description, length: 50) %></td>
        <td><%= number_to_currency(course.price) %></td>
        <td>
          <%= link_to 'View Lessons', course_lessons_path(course) %> |
          <%= link_to 'View Enrollments', enrollments_path(course_id: course.id) %> |
          <%= link_to 'Edit', edit_course_path(course) %> |
          <%= link_to 'Delete', course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @courses %>
